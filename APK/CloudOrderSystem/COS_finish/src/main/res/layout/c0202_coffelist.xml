<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/c0202_imgCoffeeType"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:contentDescription="TODO"
        android:padding="10dp"
        android:src="@drawable/week" />

    <TextView
        android:id="@+id/c0202_txtCoffeeType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="10dp"
        android:text="@string/c0202_t001"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/c0202_imgRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/c0202_imgRight"
        android:padding="10dp"
        app:srcCompat="@drawable/icons8_forward_30" />

</LinearLayout>
