<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/b001s">

    <RadioGroup
        android:id="@+id/RL2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/c0401_r001"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_tab_selector"
            android:button="@null"
            android:gravity="center"
            android:text="@string/c0401_r001"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/c0401_r002"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_tab_selector"
            android:button="@null"
            android:gravity="center"
            android:text="@string/c0401_r002"
            android:textSize="24sp" />

    </RadioGroup>

    <LinearLayout
        android:id="@+id/LL"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp45"
        android:layout_below="@+id/RL2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/user_list"
            android:text="@string/c0401_tel"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:hint="@string/c0401_telhint"
            android:inputType="text" />
    </LinearLayout>

    <Button
        android:id="@+id/c0401_b001"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LL"
        android:layout_margin="@dimen/dp15"
        android:layout_marginTop="-78dp"
        android:background="@drawable/bg_shadow_corners_rectangle"
        android:gravity="center"
        android:text="@android:string/VideoView_error_button"
        android:textSize="18sp" />

    <!---->
    <ListView
        android:id="@+id/android:list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/c0401_b001"
        android:layout_marginTop="0dp"
        android:padding="@dimen/Margins" />
    <!---->
</RelativeLayout>